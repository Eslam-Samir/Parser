<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="parent" alignment="CENTER" stylesheets="@tree.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TreeController">
	<children>
      <ScrollPane fx:id="canvasContainer" prefHeight="1000.0" prefWidth="1000.0" styleClass="canvas">
         <content>
      		<Canvas fx:id="canvas" height="3000.0" width="3000.0" />
         </content>
      </ScrollPane>
      <Button mnemonicParsing="false" onAction="#SaveCanvas" text="Save Image">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font size="18.0" />
         </font>
      </Button>
	</children>
</VBox>
